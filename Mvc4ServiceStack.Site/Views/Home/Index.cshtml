@using System.Web.Optimization
@model Mvc4.ServiceStack.Models.StoreViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/index")

<div id="storeGrid"></div>

<div>
    <div class="storeLine">
        <span class="storeLabels">Retailer</span>
        <span>
            @Html.TextBoxFor(model => model.RetailerId, new { @id = "retailer" })
        </span>
    </div>
    <div class="storeLine">
        <span class="storeLabels">Store Id</span>
        <span>
            @Html.TextBoxFor(model => model.StoreId, new { @id = "storeId" })
        </span>
    </div>
    <div class="storeLine">
        <span class="storeLabels">Name</span>
        <span>
            @Html.TextBoxFor(model => model.Name, new { @id = "name" })
        </span>
    </div>
    <div class="storeLine">
        <span class="storeLabels">Number</span>
        <span>
            @Html.TextBoxFor(model => model.Number, new { @id = "number" })
        </span>
    </div>
    <div class="storeLine">
        <span class="storeLabels">City</span>
        <span>
            @Html.TextBoxFor(model => model.City, new { @id = "city" })
        </span>
    </div>
    <div class="storeLine">
        <span class="storeLabels">State</span>
        <span>
            @Html.TextBoxFor(model => model.State, new { @id = "state" })
        </span>
    </div>
    <div class="storeLine">
        <span class="storeLabels">District</span>
        <span>
            @Html.TextBoxFor(model => model.OrgLevelId, new { @id = "orgLevelId" })
        </span>
    </div>
    <div class="storeLine">
        <span class="storeLabels">Territory</span>
        <span>
            @Html.TextBoxFor(model => model.SubOrgLevelId, new { @id = "subOrgLevelId" })
        </span>
    </div>
</div>

<script type="text/javascript">

    (function () {
        //var postData = {};
        //postData.name = 'World!';
        //$.ajax({
        //    data: postData,
        //    dataType: 'json',
        //    success: function(r) {
        //        alert(r.Result);
        //    },
        //    type: 'GET',
        //    url: 'servicestack/store'
        //});
        //$.getJSON('servicestack/hello/World!', function (r) {
        //    alert(r.Result);
        //});
        $('#orgLevelId').kendoComboBox({
            change: function () {
                var subOrgLevelComboBoxData = $('#subOrgLevelId').data('kendoComboBox');
                subOrgLevelComboBoxData.value(null);
                subOrgLevelComboBoxData.dataSource.read();
            },
            dataTextField: 'Value',
            dataValueField: 'Key',
            dataSource: {
                type: "json",
                transport: {
                    read: function (options) {
                        var postData = {};
                        $.ajax({
                            data: postData,
                            dataType: 'json',
                            url: "servicestack/orglevel",
                            success: function (result) {
                                options.success(result);
                            },
                            type: "GET"
                        });
                    }
                }
            },
            filter: "contains",
            suggest: true
        });
        $('#retailer').kendoComboBox({
            dataTextField: 'Value',
            dataValueField: 'Key',
            dataSource: {
                type: "json",
                transport: {
                    read: function (options) {
                        var postData = {};
                        $.ajax({
                            data: postData,
                            dataType: 'json',
                            url: "servicestack/retailer",
                            success: function (result) {
                                options.success(result);
                            },
                            type: "GET"
                        });
                    }
                }
            },
            filter: "contains",
            suggest: true
        });
        $("#storeGrid").kendoGrid({
            autoBind: true,
            filterable: false,
            groupable: false,
            height: "300px",
            pageable: true,
            resizeable: true,
            selectable: "multiple, row",
            sortable: {
                mode: "single",
                allowUnsort: false
            },
            dataSource: {
                pageSize: 30,
                type: "json",
                transport: {
                    read: function (options) {
                        var postData = {};
                        $.ajax({
                            data: postData,
                            dataType: 'json',
                            url: "servicestack/store",
                            success: function (result) {
                                options.success(result);
                            },
                            type: "GET"
                        });
                    }
                },
                schema: {
                    model: {
                        id: "Id",
                        fields: {
                            RetailerId: { type: "number" },
                            RetailerName: { type: "string" },
                            Name: { type: "string" },
                            Number: { type: "number" },
                            City: { type: "string" },
                            State: { type: "string" },
                            OrgLevelName: { type: "string" },
                            OrgLevelId: { type: "string" },
                            SubOrgLevelName: { type: "string" },
                            SubOrgLevelId: { type: "string" }
                        }
                    }
                }
            },
            columns: [{
                field: "RetailerName",
                title: "Retailer Name",
                    width: "120px"
                },
                {
                field: "Id",
                title: "Store Id",
                    width: "70px"
                },
                {
                    field: "Name",
                    title: "Name",
                    width: "180px"
                }, {
                    field: "Number",
                    title: "Number",
                    width: "90px"
                }, {
                    field: "City",
                    title: "City",
                    width: "190px"
                }, {
                    field: "State",
                    title: "State",
                    width: "60px"
                }, {
                    field: "OrgLevelName",
                    title: "District",
                    width: "120px"
                }, {
                    field: "SubOrgLevelName",
                    title: "Territory",
                    width: "120px"
                }]
        });
        $('#subOrgLevelId').kendoComboBox({
            autoBind: false,
            cascadeFrom: "orgLevelId",
            dataTextField: "Value",
            dataValueField: "Key",
            dataSource: {
                serverFiltering: true,
                type: "json",
                transport: {
                    read: function (options) {
                        var postData = {};
                        postData.OrgLevelId = $('#orgLevelId').data('kendoComboBox').value();
                        $.ajax({
                            data: postData,
                            dataType: 'json',
                            url: "servicestack/suborglevel",
                            success: function (result) {
                                options.success(result);
                            },
                            type: "GET"
                        });
                    }
                }
            },
            filter: "contains",
            suggest: true
        });
    })();
    
    
</script>